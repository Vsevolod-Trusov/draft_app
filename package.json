{
  "name": "zuimi_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start --watch",
    "prepare": "husky",
    "pm2:dev": "pnpm build && cross-env NODE_ENV=develop  pm2 start ecosystem.config.js --env develop",
    "pm2:prod": "pnpm build && cross-env NODE_ENV=production  pm2 start ecosystem.config.js --env production",
    "pm2:stage": "pnpm build && cross-env NODE_ENV=stage  pm2 start ecosystem.config.js --env stage",
    "pm2:test": "pnpm build && cross-env NODE_ENV=test  pm2 start ecosystem.config.js --env test",
    "start:dev": "dotenv -e ./.develop.env -- cross-env NODE_ENV=develop nest start --watch",
    "start:stage": "dotenv -e ./.stage.env -- cross-env NODE_ENV=stage node dist/main",
    "start:test": "dotenv -e ./.test.env -- cross-env NODE_ENV=testing node dist/main",
    "start:prod": "dotenv -e ./.production.env -- cross-env NODE_ENV=production node dist/main",
    "start:debug": "dotenv -e ./.develop.env -- cross-env NODE_ENV=develop nest start --debug --watch",
    "prisma:build_dev_schema": "dotenv -e ./.develop.env -- pnpm exec prisma migrate dev --name init --schema ./src/libs/database/postgresql/schema.prisma",
    "prisma:build_test_schema": "dotenv -e ./.test.env -- pnpm exec prisma migrate dev --name init --schema ./src/libs/database/postgresql/schema.prisma",
    "prisma:build_stage_schema": "dotenv -e ./.stage.env -- pnpm exec prisma migrate dev --name init --schema ./src/libs/database/postgresql/schema.prisma",
    "prisma:build_prod_schema": "dotenv -e ./.production.env -- pnpm exec prisma migrate dev --name init --schema ./src/libs/database/postgresql/schema.prisma",
    "prisma:generate_client": "pnpm exec prisma generate --schema ./src/libs/database/postgresql/schema.prisma"
  },
  "dependencies": {
    "@fastify/cookie": "6.0.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^6.12.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.6",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/swagger": "^8.1.0",
    "@prisma/client": "^6.0.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.4",
    "fastify": "^5.1.0",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zuimi_backend": "file:"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.17.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.0.0",
    "prisma": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
