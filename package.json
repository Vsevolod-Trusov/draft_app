  "scripts": {
    "build": "nest build",
    "prepare": "husky",
    "start:local": "dotenv -e ./.local.env -- cross-env NODE_ENV=local nest start --watch",
    "pm2:local": "cross-env NODE_ENV=local pm2 start ecosystem.config.js --env local --no-daemon",
    "prisma:generate_client": "pnpm exec prisma generate --schema ./src/libs/database/postgresql/schema.prisma",
    "prisma:build_schema": "pnpm exec prisma migrate dev --name init --schema ./src/libs/database/postgresql/schema.prisma",
    "pm2:start": "pnpm prisma:build_schema && pm2 start ecosystem.config.js --no-daemon",
    "docker:run_dev": "cross-env BACKEND_PORT=3000 NODE_ENV=develop docker compose -f ./docker-compose.general.yml up --build",
    "docker:run_mvp": "cross-env BACKEND_PORT=3001 NODE_ENV=mvp docker compose -f ./docker-compose.general.yml up --build",
    "docker:run_prod": "cross-env BACKEND_PORT=3002 NODE_ENV=production docker compose -f ./docker-compose.general.yml up --build"
  },
